{
  "name": "deepfocus-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "start": "tsx src/server.ts",
    "dev": "tsx watch .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write \"**/*.+(js|ts|jsx|tsx|json|css|md|yml|yaml|html)\"",
    "format:check": "prettier --check \"**/*.+(js|ts|jsx|tsx|json|css|md|yml|yaml|html)\"",
    "build": "copyfiles -u 1 src/**/* dist",
    "test:integration": "tsx node_modules/mocha/bin/mocha src/tests/integration/**/*.test.ts --exit"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "format": "^0.2.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^8.5.4",
    "tsx": "^4.18.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.3.17",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.7",
    "@types/supertest": "^6.0.2",
    "chai": "^5.1.1",
    "crypto": "^1.0.1",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
